{% extends 'base.html.twig' %}

{% block title %}PAS DEL ROC - Créer un compte{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="user-container">
		<div class="user-content">
			<h2>Créer un compte</h2>
            {{ form_start(registrationForm, { 'attr' : { 'class': 'register-form' } }) }}
                {{ form_row(registrationForm.email, { 'row_attr' : { 'class': 'group-input' }, 'attr' : { 'class': 'form-control' } }) }}
                {{ form_row(registrationForm.plainPassword) }}
                <button class="submit-btn" type="submit">Créer un compte</button>
                <p>Vous avez déjà un compte ? <a class="alternative" href="{{path('app_login')}}">Connexion</a></p>
            {{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}