{% extends 'base.html.twig' %}

{% block title %}PAS DEL ROC - Contact{% endblock %}

{% block body %}
	<div class="contact-container">
		<div class="maps">
			<iframe loading="lazy" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=100%25&amp;hl=en&amp;q=32%20Route%20de%20Bessi%C3%A8res,%2031380%20Paulhac+(Pas%20Del%20Roc)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed" width="100%" height="100%" frameborder="0">
				<a href="https://www.maps.ie/distance-area-calculator.html">measure area map</a>
			</iframe>
		</div>
		{{ form_start(form, { 'attr' : { 'id': 'contact-form', 'class': 'contact-form-container' } }) }}
			<h2>Une question ?</h2>
			{{ form_row(form.name) }}
			{{ form_row(form.email) }}
			{{ form_row(form.objet) }}
			{{ form_row(form.message) }}
			{{ form_row(form.submit) }}
		{{ form_end(form) }}
