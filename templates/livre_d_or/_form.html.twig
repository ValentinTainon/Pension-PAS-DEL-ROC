{% extends 'base.html.twig' %}

{% block title %}PAS DEL ROC - Commentaire{% endblock %}

{% block body %}
	<div class="commentaire-container">
		{{ form_start(form, { 'attr' : { 'class': 'commentaire-form-container' } }) }}
			<h2>Déjà client ?<br>Écrivez-nous un commentaire !</h2>
			{{ form_row(form.autheur) }}
			{{ form_row(form.email) }}
			{{ form_row(form.message) }}
		{{ form_end(form) }}
	</div>
{% endblock %}